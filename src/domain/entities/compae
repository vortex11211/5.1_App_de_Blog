export class User {
    private constructor(private props: UserProps) { }

    // Método para crear una nueva instancia de User
    public static create(username: string, email: string, password: string): User {
        return new User({
            id: 0,
            username,
            email,
            password,
            role: Role.SIMPLE_USER,
            banned: false,
            createdAt: new Date(),
            updatedAt: new Date()
        });
    }

    // Nuevo método para reconstruir una instancia de User a partir de un objeto existente
    public static with(props: UserProps): User {
        return new User(props);
    }

    // Otros métodos de la clase (getters, etc.) pueden ir aquí...
}
